<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">
        <android.widget.Button
            android:id="@+id/backLater"
            android:layout_weight="0.1"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_baseline_arrow_back_24"
            android:clickable="true"
            android:focusable="true" />
        <TextView
            android:layout_weight="0.8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/later"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="35sp"
            android:textStyle="bold"
            />


    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="30dp"/>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">
        <View
            android:layout_weight="0.01"
            android:layout_width="0dp"
            android:layout_height="0dp"/>
        <TextView
            android:layout_weight="0.99"
            android:gravity="start"
            android:id="@+id/stringLater"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/optionR"
            android:textColor="@color/grey"
            android:textSize="12sp" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="30dp"/>


    <RadioGroup
        android:id="@+id/toggleLater"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/togglebackgroud"
        android:orientation="horizontal">
        <RadioButton
            android:layout_margin="5dp"
            android:id="@+id/playlistLater"
            android:background="@drawable/toggleselector"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="@string/playlist"
            android:textColor="@color/textcolor" />

        <RadioButton
            android:layout_margin="5dp"
            android:id="@+id/musicLater"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/toggleselector"
            android:button="@null"
            android:gravity="center"
            android:checked="true"
            android:text="@string/music"
            android:textColor="@color/textcolor" />
    </RadioGroup>
    <View
        android:layout_width="match_parent"
        android:layout_height="30dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">





        <LinearLayout
            android:visibility="invisible"
            android:id="@+id/playLaterList"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">
                <ImageView
                    android:layout_weight="0.4"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:src="@drawable/playlist"
                    />
                <LinearLayout
                    android:layout_weight="0.3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/playlist1"
                        android:textColor="@color/white"
                        android:textSize="20sp" />
                    <TextView
                        android:layout_marginBottom="10dp"
                        android:gravity="bottom"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/artist"
                        android:textColor="@color/yellow"
                        android:textSize="20sp"
                        />
                </LinearLayout>
                <TextView
                    android:layout_weight="0.15"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:gravity="bottom"
                    android:textColor="@color/white"
                    android:text="@string/lt8"

                    />
                <ImageView
                    android:gravity="end"
                    android:padding="15dp"
                    android:layout_weight="0.15"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/options"/>



            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">
                <ImageView
                    android:layout_weight="0.4"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:src="@drawable/playlist"
                    />
                <LinearLayout
                    android:layout_weight="0.3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/playlist2"
                        android:textColor="@color/white"
                        android:textSize="20sp" />
                    <TextView
                        android:layout_marginBottom="10dp"
                        android:gravity="bottom"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/artist"
                        android:textColor="@color/yellow"
                        android:textSize="20sp"
                        />
                </LinearLayout>
                <TextView
                    android:layout_weight="0.15"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:gravity="bottom"
                    android:textColor="@color/white"
                    android:text="@string/lt3"

                    />
                <ImageView
                    android:gravity="end"
                    android:padding="15dp"
                    android:layout_weight="0.15"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/options"/>



            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:visibility="visible"
            android:id="@+id/musicLaterList"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">
                <ImageView
                    android:layout_weight="0.4"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:src="@drawable/despacito"
                    />
                <LinearLayout
                    android:layout_weight="0.3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/songName"
                        android:textColor="@color/white"
                        android:textSize="20sp" />
                    <TextView
                        android:layout_marginBottom="10dp"
                        android:gravity="bottom"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/artist"
                        android:textColor="@color/yellow"
                        android:textSize="20sp"
                        />
                </LinearLayout>
                <TextView
                    android:layout_weight="0.15"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:gravity="bottom"
                    android:textColor="@color/white"
                    android:text="@string/l301"

                    />
                <ImageView
                    android:gravity="end"
                    android:padding="15dp"
                    android:layout_weight="0.15"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/options"/>



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">
                <ImageView
                    android:layout_weight="0.4"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:src="@drawable/despacito"
                    />
                <LinearLayout
                    android:layout_weight="0.3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/songName"
                        android:textColor="@color/white"
                        android:textSize="20sp" />
                    <TextView
                        android:layout_marginBottom="10dp"
                        android:gravity="bottom"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/artist"
                        android:textColor="@color/yellow"
                        android:textSize="20sp"
                        />
                </LinearLayout>
                <TextView
                    android:layout_weight="0.15"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:gravity="bottom"
                    android:textColor="@color/white"
                    android:text="@string/l024"

                    />
                <ImageView
                    android:gravity="end"
                    android:padding="15dp"
                    android:layout_weight="0.15"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/options"/>



            </LinearLayout>


        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="200dp"/>

</LinearLayout>