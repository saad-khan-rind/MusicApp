<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpOptions"
    android:background="@color/black"
    android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">
                <View
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
                <View
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
        <TextView
            android:padding="10dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:gravity="end"
            android:text="@string/signIn"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20sp"
            android:clickable="true"
            android:onClick="onSignInOP"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:orientation="horizontal">

                <ImageView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:gravity="start"
                    android:paddingStart="10dp"
                    android:src="@drawable/roundlogo"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingStart="20dp"
                    android:padding="10dp"
                    android:text="@string/musify"
                    android:textColor="@color/white"
                    android:textSize="40sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1">
                        <View
                            android:layout_weight="0.05"
                            android:layout_width="0dp"
                            android:layout_height="0dp"/>
                        <Button
                            android:layout_weight="0.9"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:text="@string/continueFacebook"
                            android:textSize="20sp"
                            android:textColor="@color/blue"
                            android:drawableLeft="@drawable/facebookbutton"
                            android:textAllCaps="false"
                            android:background="@drawable/whitebutton"
                            android:clickable="true"
                            android:focusable="true"
                            />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="40dp"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1">
                        <View
                            android:layout_weight="0.05"
                            android:layout_width="0dp"
                            android:layout_height="0dp"/>
                        <Button
                            android:layout_weight="0.9"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:text="@string/continueGoogle"
                            android:background="@drawable/whitebutton"
                            android:textSize="20sp"
                            android:textColor="@color/orange"
                            android:drawableLeft="@drawable/googlebutton"
                            android:textAllCaps="false"
                            android:clickable="true"
                            android:focusable="true"
                            />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="40dp"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1">
                        <View
                            android:layout_weight="0.05"
                            android:layout_width="0dp"
                            android:layout_height="0dp"/>
                        <Button
                            android:layout_weight="0.9"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:text="@string/createAccount"
                            android:background="@drawable/whitebutton"
                            android:textSize="20sp"
                            android:textColor="@color/yellow"
                            android:textAllCaps="false"
                            android:onClick="onCreateAccount"
                            android:clickable="true"
                            android:focusable="true"
                            />

                </LinearLayout>

        </LinearLayout>





    </LinearLayout>


